<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<p>
	<strong>Phone Numbers:</strong>
	<% @person.phone_numbers.each do |phone| %>
		<li><%= phone.number %> | <%= link_to 'Edit', edit_phone_number_path(phone) %> | <%= link_to 'Destroy', phone_number_path(phone), method: :delete %>
    </li>
	<% end %>
  <% @person.email_addresses.each do |email| %> 
  <li><%= email.address %>
  </li>
  <% end %>
</p>

<%= link_to 'Add email address', new_person_email_address_path(@person) %>
<%= link_to 'Add phone number', new_person_phone_number_path(@person) %>
<%= link_to 'Edit', edit_person_path(@person) %>
<%= link_to 'Back', people_path %>
